# Windows XP Portfolio Simulator - Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
# For Docker Compose, this is automatically set
# For external PostgreSQL, use your connection string
DATABASE_URL=postgresql://postgres:postgres@db:5432/winxp

# Admin Account
# Set these to create an admin user on first run
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here

# JWT Secret (optional - auto-generated if not set)
# Use a long random string for production
JWT_SECRET=your-jwt-secret-here

# Server Configuration
PORT=5000
NODE_ENV=production
